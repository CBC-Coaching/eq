const getFeedback = (score) => {
  if (score >= 61) return "ðŸ’¡ Emotionally Intelligent Leader â€“ Youâ€™re highly attuned, resilient, and a natural team builder.";
  if (score >= 46) return "ðŸ”„ Emotionally Aware and Growing â€“ Youâ€™ve got a solid base and room to refine your strengths.";
  if (score >= 30) return "ðŸŒ± Developing EQ Skills â€“ Youâ€™re learning! Focus on self-awareness and self-regulation first.";
  return "ðŸ§­ Time to Explore EQ â€“ Itâ€™s never too late. Understanding yourself better will change your work and life.";
};

export default function EmotionalIntelligenceQuiz() {
  const [step, setStep] = useState(0);
  const [score, setScore] = useState(0);
  const [completed, setCompleted] = useState(false);

  const currentSection = quizData[Math.floor(step / 3)];
  const currentQuestion = currentSection.questions[step % 3];
  const progress = (step / (quizData.length * 3)) * 100;

  const handleAnswer = (value) => {
    const nextStep = step + 1;
    setScore(score + value);
    if (nextStep >= quizData.length * 3) {
      setCompleted(true);
    } else {
      setStep(nextStep);
    }
  };

  if (completed) {
    return (
      <div className="max-w-xl mx-auto mt-10 p-4 text-center">
        <h2 className="text-2xl font-bold mb-4">Your EQ Score: {score}/75</h2>
        <p className="text-lg">{getFeedback(score)}</p>
      </div>
    );
  }

  return (
    <div className="max-w-xl mx-auto mt-10">
      <Card className="p-6">
        <CardContent>
          <h3 className="text-xl font-semibold mb-4">{currentSection.section}</h3>
          <p className="mb-6">{currentQuestion.question}</p>
          <div className="space-y-3">
            {currentQuestion.answers
              .sort(() => Math.random() - 0.5)
              .map((answer, index) => (
                <Button
                  key={index}
                  variant="outline"
                  className="w-full text-left"
                  onClick={() => handleAnswer(answer.value)}
                >
                  {answer.text}
                </Button>
              ))}
          </div>
          <Progress value={progress} className="mt-6" />
        </CardContent>
      </Card>
    </div>
  );
}
